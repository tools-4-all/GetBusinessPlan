                          }
                        }
                      }
                    }
                  },
                  "caption": { "type": "string" }
                }
              }
            },
  
            "assumptions": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 8,
              "maxItems": 30
            },
            "dati_mancanti": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 5,
              "maxItems": 30
            },
            "disclaimer": { "type": "string" }
          }
        }
      }
    }
