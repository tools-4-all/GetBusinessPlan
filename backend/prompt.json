                        "properties": {
                          "key": { "type": "string" },
                          "label": { "type": "string" },
                          "unit": { "type": "string" },
                          "formula_note": { "type": "string" }
                        }
                      }
                    },
                    "scenarios": {
                      "type": "array",
                      "minItems": 3,
                      "maxItems": 3,
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": ["name", "assumption_deltas", "monthly", "summary"],
